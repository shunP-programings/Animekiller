<% if flash[:info] %>
<%= flash[:info] %>
<% end %>
<% if @anime.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
  <% @anime.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<% if current_user %>
  <%= form_for @anime, url: {action: :create} do |f| %>
  <p>
    <h3>アニメタイトル</h3>
    <%= f.text_field :title %>
    <br>
    <br>
    <h3>感想</h3>
    <%= f.text_area :message %>
    <br>
    <%= f.submit "送信" %>
  </p>
  <% end %>
<% end %>
<br>
<br>
